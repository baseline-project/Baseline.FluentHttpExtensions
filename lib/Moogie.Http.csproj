<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Moogie.Http</PackageId>
        <PackageTags>http client;system.net.httpclient;httpclient;http abstractions;easy;simple;moogie;moogie.http</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Authors>l_symonds</Authors>
        <RepositoryUrl>https://github.com/lsymonds/Moogie.Http</RepositoryUrl>
        <PackageDescription>Moogie.Http is a single file fluent interface for the System.Net.Http.HttpClient class, now available as a NuGet package!</PackageDescription>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="Moogie.Http.Tests\**" />
        <Compile Include="..\HttpRequest.cs">
            <Link>HttpRequest.cs</Link>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Remove="Moogie.Http.Tests\**" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Moogie.Http.Tests\**" />
        <None Remove=".editorconfig" />
        <None Remove=".gitignore" />
        <None Remove="LICENSE" />
        <None Remove="README.md" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="System.Text.Json" Version="4.7.1" />
    </ItemGroup>

</Project>
